{
    "C_Cpp.default.cppStandard": "c++11",
    "C_Cpp.default.cStandard": "c11",
    "C_Cpp.default.intelliSenseMode": "gcc-x64",
    "C_Cpp.intelliSenseEngine": "Disabled",
    "C_Cpp.autocomplete": "Disabled", // So you don't get autocomplete from both extensions.
    "C_Cpp.errorSquiggles": "Disabled",
    "C_Cpp.formatting": "Disabled",
    "C_Cpp.codeFolding": "Enabled",
    "C_Cpp.default.compileCommands": "/workspace/compile_commands.json",
    "C_Cpp.default.includePath": [
        "/workspace"
    ],
    "C_Cpp.autoAddFileAssociations": false,
    "C_Cpp.enhancedColorization": "Enabled",
    "C_Cpp.workspaceSymbols": "All",
    "cmakeExplorer.buildDir": "build",
    "breadcrumbs.enabled": true,
    "files.exclude": {
        ".hadouken": true,
        ".devcontainer": true,
        ".vscode": true,
        "hadouken": true,
    },
    "cmake.configureArgs": [
        "-Wno-dev"
    ],
    "cmake.configureOnOpen": true,
    "cmake.generator": "Unix Makefiles",
    "cmake.debugConfig": {},
    "cmake.configureSettings": {},
    "doxdocgen.file.customTag": [
        "_________________________________________________"
    ],
    "doxdocgen.file.fileTemplate": "@file   {name}",
    "doxdocgen.file.copyrightTag": [
        // (mgilor): Re-enabled until fixed properly
        "SPDX-License-Identifier:    MIT"
    ],
    "doxdocgen.generic.authorTag": "@author {author} <{email}>",
    "doxdocgen.file.fileOrder": [
        "custom",
        "empty",
        "file",
        "author",
        "date",
        "empty",
        "copyright",
        "custom"
    ],
    "doxdocgen.generic.dateFormat": "DD.MM.YYYY",
    "doxdocgen.generic.dateTemplate": "@date   {date}",
    "C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools",
    "editor.formatOnSave": true,
    // clangd settings
    "clangd.arguments": [
        "-log=verbose",
        "-pretty",
        "--background-index",
        "--compile-commands-dir=/workspace",
        "-header-insertion=never"
    ],
    "clangd.serverCompletionRanking": true,
    "editor.semanticHighlighting.enabled": true,
    // Editor settings
    // The number of spaces a tab is equal to. This setting is overridden
    // based on the file contents when `editor.detectIndentation` is true.
    "editor.tabSize": 4,
    // Insert spaces when pressing Tab. This setting is overriden
    // based on the file contents when `editor.detectIndentation` is true.
    "editor.insertSpaces": true,
    // When opening a file, `editor.tabSize` and `editor.insertSpaces`
    // will be detected based on the file contents. Set to false to keep
    // the values you've explicitly set, above.
    "editor.detectIndentation": false,
    "testExplorer.useNativeTesting": true,
}